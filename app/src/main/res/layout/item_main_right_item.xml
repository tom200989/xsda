<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.hiber.tools.layout.PercentRelativeLayout
        android:id="@+id/rl_right_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_right_item_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            app:layout_heightPercent="80%w"
            app:layout_widthPercent="80%w" />

        <TextView
            android:id="@+id/tv_right_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_right_item_pic"
            android:layout_centerHorizontal="true"
            android:lines="1"
            android:maxLines="1"
            android:text="Unknown"
            android:textColor="@color/colorMainRightItemTitle"
            app:layout_marginBottomPercent="4%sh"
            app:layout_marginTopPercent="4%sh"
            app:layout_textSizePercent="2.2%sh" />
        
    </com.hiber.tools.layout.PercentRelativeLayout>

</com.hiber.tools.layout.PercentRelativeLayout>
